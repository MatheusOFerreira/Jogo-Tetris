<UserControl x:Class="Tetris.GameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="590" Height="960">
    <Viewbox Stretch="UniformToFill">
        <Grid Width="590" Height="960">
            <!-- Fundo com a imagem do Game Over -->
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/game_over.jpg"/>
            </Grid.Background>

            <!-- Pontuação final -->
            <TextBlock x:Name="FinalScoreText"
                       Text="0"
                       Margin="406,251,0,0"
                       FontSize="28"
                       FontFamily="pack://application:,,,/Fonts/#Telelower"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Foreground="White"
                       Width="184"
                       TextAlignment="Left"/>

            <!-- Botão invisível REINICIAR -->
            <Button x:Name="RestartButton"
                    Content=""
                    Width="142" Height="72"
                    Margin="224,328,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="Restart_Click"/>

            <!-- Botão invisível RANKING -->
            <Button x:Name="RankingButton"
                    Content=""
                    Width="112" Height="88"
                    Margin="238,526,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="Ranking_Click"/>

            <!-- Botão invisível SAIR -->
            <Button x:Name="ExitButton"
                    Content=""
                    Width="114" Height="60"
                    Margin="238,855,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="Exit_Click"/>
        </Grid>
    </Viewbox>
</UserControl>
