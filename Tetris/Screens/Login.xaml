<UserControl x:Class="Tetris.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="590" Height="960">
    <Viewbox Stretch="UniformToFill">
        <Grid Width="590" Height="960">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/login.jpg"/>
            </Grid.Background>

            <TextBox x:Name="PlayerName"
                     Width="387"
                     Height="39"
                     Margin="103,276,0,0"
                     FontSize="20"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     Padding="10"
                     FontFamily="pack://application:,,,/Fonts/#Telelower"
                     TextAlignment="Center"
                     />

            <Button x:Name="PlayButton"
                    Content=""
                    Width="234"
                    Height="66"
                    Margin="178,630,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="Play_Click"/>

            <Button x:Name="RankingButton"
                    Content=""
                    Width="110"
                    Height="87"
                    Margin="239,440,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="Ranking_Click"/>

            <Button x:Name="ConfigButton"
                    Content=""
                    Width="115"
                    Height="122"
                    Margin="452,815,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="Config_Click"/>

            <Border x:Name="ConfigPanel"
                    Width="250" Height="180"
                    Background="#DD1E1E1E"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="10"
                    Visibility="Collapsed"
                    Margin="170,300,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <TextBlock Text="Dificuldade"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <Button Content="Fácil" Click="Facil_Click" Margin="0,0,0,5"/>
                    <Button Content="Intermediário" Click="Intermediario_Click" Margin="0,0,0,5"/>
                    <Button Content="Difícil" Click="Dificil_Click"/>
                </StackPanel>
            </Border>

        </Grid>
    </Viewbox>
</UserControl>
